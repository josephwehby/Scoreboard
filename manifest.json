{
  "manifest_version": 2,
  "name": "Scoreboard",
  "version": "1.0",

  "description": "Displays movie ratings",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["scoreboard.js"]
    }
  ], 
  "permissions" : [
    "http://www.omdbapi.com/*"
  ]
}
